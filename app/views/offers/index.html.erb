<h1> Offers </h1>

<% if policy(Offer).new? %>
  <%= link_to 'New Offer', new_offer_path, class: "btn btn-gradient" %>
<% end  %>
<div>

<div class="row row--no-padding">
  <div class="col-12 col-md-6">
    <div class="search__map-wrapper">
      <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
</div>
<div class="container">
  <div class="cards">
    <% @offers.each do |offer| %>
    <div class="card-product">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-product-infos">
        <h2><strong>Language: </strong><%= offer.language %></h2>
        <p><strong>Level: </strong><%= offer.level %> </p>
        <p><strong>Date or day: </strong><%= offer.date %>  </p>
        <p><strong>Duration: </strong><%= offer.duration %> </p>
        <p><strong>Address</strong><%= offer.address %> </p>
        <%= link_to 'Details', offer_path(offer), class: "btn btn-ghost" %>
      </div>
    </div>
  </div>
</div>

</div>

<% if policy(offer).edit?  %>
  <%= link_to 'Update', edit_offer_path(offer) %>
<% end  %>
<% if policy(offer).destroy?  %>
  <%= link_to 'Destroy', offer, method: :delete, data: {confirm: "Are you sure?"} %>
<% end  %>
<% end  %>
