<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_url('homepage')%>);">
  <div class="container">
    <h1>Lengua brings language learners together!</h1>
    <p>Practice speaking your favorite languages and make new friends</p>
  </div>
</div>

<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>

<div class= "homepage_form">
  <%= simple_form_for @offer, url: offers_path do |f| %>
    <div class='d-flex'>
      <p>Which language do you want to practice?</p>
      <%= f.input :language, label: false, collection: ['French', 'English', 'Spanish', 'Chinese', 'Japanese', 'German', 'Arabic'] %>
    </div>
    <div class='d-flex'>
      <p>What level do you want your language partner to be?</p>
      <%= f.input :level, label: false, collection: ['Native', 'Advanced', 'Intermediate'] %>
    </div>
    <div class='d-flex'>
      <p>Which day of the week do you want to meet?</p>
      <%= f.input :date, label: false, collection: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'] %>
    </div>
    <div class='d-flex'>
      <p>How long do you want to meet for?</p>
      <%= f.input :duration, label: false, collection: ['1 hour', '2 hour', '30 minutes'] %>
    </div>
   <br>
    <%= f.submit "search", class: "btn btn-primary" %>
  <% end %>
</div>
